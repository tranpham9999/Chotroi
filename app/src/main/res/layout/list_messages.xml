<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="2dp"
    android:background="@color/grayLight">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="1dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">


            <TextView
                android:id="@+id/textViewName_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/circleimageViewAvatar_message"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="20dp"
                android:text="Trần Nguyễn Thành Phẫm"
                android:textSize="17dp"
                android:textStyle="bold"
                android:textColor="@color/colorTextviewProfile"
                />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/circleimageViewAvatar_message"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:src="@drawable/ic_photo_camera_indigo_400_24dp"
                android:cropToPadding="true"
                android:layout_marginRight="0dp"/>


            <TextView
                android:id="@+id/textViewMessage_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textViewName_message"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@id/circleimageViewAvatar_message"
                android:text="Hi xin chao!! "
                android:textSize="15dp"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000" />





        </RelativeLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>